<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade" client="site">
	<name>Ohanah Filter Module</name>
	<author>Beyounic SA</author>
	<creationDate>April 2011</creationDate>
	<copyright>Copyright (C) 2012 Beyounic SA. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@beyounic.com</authorEmail>
	<authorUrl>app.ohanah.com</authorUrl>
	<version>2.0.20</version>
	<description></description>
	<files>
		<filename module="mod_ohanahsearch">mod_ohanahsearch.php</filename>
		<filename>html.php</filename>
		<folder>tmpl</folder>
	</files>
	
	<params>
		<!-- 
		<param name="is_vertical" type="list" default="0" label="Layout vertical or horizontal" description="">
			<option value="1">Vertical</option>
			<option value="0">Horizontal</option>
		</param>		
		 -->
		<param name="showTextSearch" type="list" default="1" label="Show text search" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>		
		
		<param name="showFilters" type="list" default="1" label="Show filters" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>	

		<param name="enableFilterVenue" type="list" default="1" label="Enable filter by venue" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="enableFilterCategory" type="list" default="1" label="Enable filter by category" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="enableFilterEventdate" type="list" default="1" label="Enable filter by event date" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="enableFilterCountry" type="list" default="1" label="Enable filter by country" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="enableFilterState" type="list" default="1" label="Enable filter by state" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="enableFilterCity" type="list" default="1" label="Enable filter by city" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>		

		<param name="enableFilterDirection" type="list" default="1" label="Enable events ordering filter" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>		

		<param name="enableFilterRecurring" type="list" default="1" label="Enable recurring event filter" description="">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		       	
       	<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>



	<config>
		<fields name="params">
			<fieldset name="basic">
<!-- 
				<field name="is_vertical" type="list" default="0" label="Layout vertical or horizontal" description="">
					<option value="1">Vertical</option>
					<option value="0">Horizontal</option>
				</field> -->		
				
				<field name="showTextSearch" type="list" default="1" label="Show text search" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
							
				<field name="showFilters" type="list" default="1" label="Show filters" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>						

				<field name="enableFilterVenue" type="list" default="1" label="Enable filter by venue" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="enableFilterCategory" type="list" default="1" label="Enable filter by category" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="enableFilterEventdate" type="list" default="1" label="Enable filter by event date" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="enableFilterCountry" type="list" default="1" label="Enable filter by country" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="enableFilterState" type="list" default="1" label="Enable filter by state" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="enableFilterCity" type="list" default="1" label="Enable filter by city" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>							

				<field name="enableFilterDirection" type="list" default="1" label="Enable events ordering filter" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="enableFilterRecurring" type="list" default="1" label="Enable recurring event filter" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

			</fieldset>

			<fieldset
				name="advanced">

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>

			</fieldset>
		</fields>
	</config>
</install>
